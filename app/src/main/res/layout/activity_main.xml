<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@drawable/wallpaper"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="250dp"
        android:background="@drawable/backgroundforlogo"
        android:id="@+id/relativeLayout1"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="40dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true">

    </RelativeLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#000000"
        android:textSize="30dp"
        android:text="TrainMe"
        android:layout_marginStart="33dp"
        android:layout_marginTop="40dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />
    <GridLayout
        android:layout_width="wrap_content"

        android:layout_height="wrap_content"
        android:id="@+id/gridLayout"
        android:layout_below="@+id/relativeLayout1"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true">

        <Button
            android:id="@+id/viewWorkouts"
            android:layout_width="0dp"
            android:layout_marginLeft="3.5dp"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/workouts"
            android:layout_column="1"
            android:layout_marginRight="120dp"
            android:layout_columnWeight=".33"
            android:layout_marginTop="60dp"
            android:layout_row="1"

            android:onClick="viewWorkout"
            android:text="View Workouts" />

        <Button
            android:id="@+id/workouts"
            android:layout_width="0dp"
            android:layout_marginLeft="3.5dp"
            android:onClick="newWorkout"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_column="1"
            android:layout_columnWeight=".33"
            android:layout_marginRight="120dp"
            android:layout_row="0"
            android:text="New Workout" />

        <Button
            android:id="@+id/settings"
            android:layout_marginLeft="3.5dp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:onClick="goToSettings"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/viewWorkouts"
            android:layout_column="1"
            android:layout_columnWeight=".33"
            android:layout_marginTop="60dp"
            android:layout_marginRight="120dp"
            android:layout_row="2"
            android:text="Settings" />
    </GridLayout>







</RelativeLayout>
